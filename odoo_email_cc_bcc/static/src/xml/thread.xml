<templates xml:space="preserve">
    <t t-inherit="mail.Message" t-inherit-mode="extension">
        <xpath expr="//div[@t-ref='shadowBody']" position="before">
            <small>
                <t t-if="message.email_to">
                    <p><b>To: </b><t t-esc="message.email_to"/></p>
                </t>

                <t t-if="message &#38;&#38; message.cc_recipient_ids &#38;&#38; message.cc_recipient_ids.length > 0">
                    <p><b>CC: </b><t t-esc="message.cc_recipient_ids.name"/></p>
                </t>

                <t t-if="message &#38;&#38; message.email_cc">
                    <p><b>CC Emails: </b><t t-esc="message.email_cc"/></p>
                </t>

                <t t-if="message &#38;&#38; message.bcc_recipient_ids &#38;&#38; message.bcc_recipient_ids.length > 0">
                    <p><b>BCC: </b><t t-esc="message.bcc_recipient_ids.name"/></p>
                </t>

                <t t-if="message.email_bcc">
                    <p><b>BCC Emails: </b><t t-esc="message.email_bcc"/></p>
                </t>
            </small>
        </xpath>
    </t>
</templates>
