<odoo>
    <data noupdate="0">
        <record id="custom_pr_rule_user_own" model="ir.rule">
            <field name="name">Custom PR: User can only see their own</field>
            <field name="model_id" ref="custom_pr_system.model_custom_pr"/>
            <field name="groups" eval="[(4, ref('custom_pr_system.group_custom_pr_end_user'))]"/>
            <field name="domain_force">[('requested_user_id', '=', user.id)]</field>
        </record>

        <record id="custom_pr_rule_approver_all" model="ir.rule">
            <field name="name">Custom PR: Approvers can see all</field>
            <field name="model_id" ref="custom_pr_system.model_custom_pr"/>
            <field name="groups" eval="[(4, ref('custom_pr_system.group_pr_approver'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>
    </data>
</odoo>